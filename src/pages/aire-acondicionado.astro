---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { AirVent, Heater, Wind, Snowflake } from 'lucide-react';

const airConditioningSolutions = [
  {
    title: "Aire acondicionado split",
    description: "Sistemas split individuales y multi-split para climatización zonal. Perfectos para viviendas y pequeñas oficinas.",
    icon: AirVent,
    link: "/contacto",
    features: ["Eficiencia energética A+++", "Control por zonas", "Tecnología Inverter", "Instalación certificada"]
  },
  {
    title: "Aire central",
    description: "Sistemas de climatización centralizada para grandes espacios comerciales e industriales.",
    icon: AirVent,
    link: "/contacto",
    features: ["Climatización integral", "Control centralizado", "Distribución por conductos", "Mantenimiento programado"]
  },
  {
    title: "Bombas de calor",
    description: "Sistemas reversibles que proporcionan calefacción y refrigeración con máxima eficiencia energética.",
    icon: AirVent,
    link: "/contacto",
    features: ["Aerotermia", "Geotermia", "Reversible", "Ahorro energético"]
  }
];
---

<Layout 
  title="Aire acondicionado Madrid | Instalación y mantenimiento | Girolan"
  description="Instalación y mantenimiento de aire acondicionado en Madrid. Sistemas split, aire central y bombas de calor. Técnicos certificados y garantía extendida."
>
  <Hero 
    title="Aire acondicionado profesional"
    subtitle="Sistemas de climatización eficientes"
    description="Instalación, mantenimiento y reparación de sistemas de aire acondicionado. Tecnología de última generación para tu máximo confort durante todo el año."
    image="https://images.pexels.com/photos/8985018/pexels-photo-8985018.jpeg"
  />

  <!-- Service Details -->
  <section class="py-20 bg-white">
    <div class="container-width section-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">
            Expertos en aire acondicionado
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            Con más de 20 años de experiencia, somos especialistas en la instalación y mantenimiento 
            de sistemas de aire acondicionado para hogares, oficinas y espacios comerciales en Madrid.
          </p>
          <p class="text-lg text-gray-600 mb-8">
            Trabajamos con las mejores marcas del mercado y ofrecemos soluciones personalizadas 
            que garantizan el máximo confort y eficiencia energética.
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="text-center p-4 bg-primary-50 rounded-lg">
              <div class="text-2xl font-bold text-primary-600">500+</div>
              <div class="text-sm text-gray-600">Instalaciones realizadas</div>
            </div>
            <div class="text-center p-4 bg-secondary-50 rounded-lg">
              <div class="text-2xl font-bold text-secondary-600">24/7</div>
              <div class="text-sm text-gray-600">Servicio técnico</div>
            </div>
          </div>
        </div>

        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/5998120/pexels-photo-5998120.jpeg" 
            alt="Instalación de aire acondicionado profesional"
            class="rounded-2xl shadow-2xl"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Solutions -->
      <div class="mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 text-center mb-12">
          Nuestras Soluciones
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {airConditioningSolutions.map((solution) => (
            <ServiceCard
              title={solution.title}
              description={solution.description}
              icon={solution.icon}
              link={solution.link}
              features={solution.features}
            />
          ))}
        </div>
      </div>

      <!-- Brands Section -->
      <div class="bg-gray-50 rounded-2xl p-12 text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-8">Trabajamos con las mejores marcas</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center opacity-60">
          <div class="text-xl font-semibold text-gray-700">Mitsubishi</div>
          <div class="text-xl font-semibold text-gray-700">Daikin</div>
          <div class="text-xl font-semibold text-gray-700">LG</div>
          <div class="text-xl font-semibold text-gray-700">Samsung</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container-width section-padding text-center">
      <h2 class="text-3xl lg:text-4xl font-bold mb-6">
        ¿Necesitas un sistema de aire acondicionado?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto opacity-90">
        Solicita tu presupuesto gratuito y sin compromiso. Nuestros técnicos certificados 
        te asesorarán sobre la mejor solución para tu espacio.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contacto" class="bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Solicitar Presupuesto
        </a>
        <a href="tel:+34XXXXXXXXX" class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-primary-600 transition-colors">
          Llamar Ahora
        </a>
      </div>
    </div>
  </section>
</Layout>