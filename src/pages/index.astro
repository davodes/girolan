---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ContactForm from '../components/ContactForm';
import GoogleMap from '../components/GoogleMap';

const services = [
  {
    title: "Aire Acondicionado",
    description: "Instalación, mantenimiento y reparación de sistemas de aire acondicionado residenciales y comerciales. Climatización eficiente para tu máximo confort.",
    icon: `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm2 4v-2H3a2 2 0 0 0 2 2zM3 9h2V7H3v2zm12 12h2v-2h-2v2zm4-18H9a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2zm-4.5 16L9 10.5l1.5-1.5L15 13.5 19.5 9 21 10.5 15 16.5z"/></svg>`,
    link: "/aire-acondicionado",
    features: ["Sistemas Split", "Aire central", "Bombas de calor", "Certificación energética"]
  },
  {
    title: "Calefacción",
    description: "Sistemas de calefacción modernos y eficientes. Desde calderas tradicionales hasta sistemas de suelo radiante y aerotermia.",
    icon: `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M11.71 17.99A1.02 1.02 0 0 1 11 18c-.4 0-.77-.23-.95-.61l-1.89-4.11c-.08-.17-.12-.36-.12-.55V5c0-.55.45-1 1-1s1 .45 1 1v7.73l1.89 4.11c.08.17.12.36.12.55 0 .28-.11.52-.29.71-.18.18-.42.29-.71.29zM13 5.08V5c0-.55.45-1 1-1s1 .45 1 1v.08c1.25.17 2.4.71 3.31 1.56.18.17.29.4.29.65s-.11.48-.29.65c-.17.17-.4.29-.65.29-.25 0-.48-.11-.65-.29-.63-.59-1.45-.94-2.35-.94s-1.72.35-2.35.94c-.17.17-.4.29-.65.29s-.48-.11-.65-.29c-.18-.17-.29-.4-.29-.65s.11-.48.29-.65c.91-.85 2.06-1.39 3.31-1.56z"/></svg>`,
    link: "/calefaccion",
    features: ["Calderas de condensación", "Suelo radiante", "Radiadores", "Aerotermia"]
  },
  {
    title: "Ventilación",
    description: "Sistemas de ventilación mecánica controlada para garantizar la calidad del aire interior y el confort en espacios residenciales y comerciales.",
    icon: `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9l-5 4.87L18.18 22 12 18.77 5.82 22 7 13.87 2 9l6.91-.74L12 2z"/></svg>`,
    link: "/ventilacion",
    features: ["VMC doble flujo", "Recuperadores de calor", "Extracción localizada", "Filtración avanzada"]
  },
  {
    title: "Frío Industrial",
    description: "Soluciones de refrigeración industrial para sectores como alimentación, farmacéutico, logística y hostelería. Sistemas robustos y eficientes.",
    icon: `<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M5 7c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm7.5-4C11.01 3 10 4.01 10 5.5s1.01 2.5 2.5 2.5S15 6.99 15 5.5 13.99 3 12.5 3zm4.5 4c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zM7.5 12c0-1.38 1.12-2.5 2.5-2.5s2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5S7.5 13.38 7.5 12z"/></svg>`,
    link: "/frio-industrial",
    features: ["Cámaras frigoríficas", "Equipos de refrigeración", "Sistemas centralizados", "Mantenimiento preventivo"]
  }
];
---

<Layout 
  title="Girolan - Climatización Profesional | Aire Acondicionado, Calefacción y Ventilación"
  description="Expertos en climatización con más de 20 años de experiencia en Madrid. Instalación y mantenimiento de aire acondicionado, calefacción, ventilación y frío industrial. Presupuesto gratuito."
>
  <!-- Hero Section -->
  <Hero 
    title="Climatización Profesional"
    subtitle="Expertos con más de 20 años de experiencia"
    description="Soluciones integrales en aire acondicionado, calefacción, ventilación y frío industrial. Garantizamos tu confort con tecnología de vanguardia y servicio personalizado."
    image="https://images.pexels.com/photos/2539462/pexels-photo-2539462.jpeg"
  />

  <!-- Services Section -->
  <section class="py-20 bg-gray-50">
    <div class="container-width section-padding">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Nuestros Servicios
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Ofrecemos soluciones completas de climatización para hogares, oficinas e industrias. 
          Tecnología avanzada y servicio personalizado para cada proyecto.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-8">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            icon={service.icon}
            link={service.link}
            features={service.features}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-white">
    <div class="container-width section-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">
            ¿Por qué elegir Girolan?
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Experiencia de 20+ años</h3>
                <p class="text-gray-600">Décadas de experiencia respaldan cada proyecto que realizamos.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Certificaciones oficiales</h3>
                <p class="text-gray-600">Técnicos certificados y autorizados por las principales marcas.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Servicio 24/7</h3>
                <p class="text-gray-600">Disponibles para emergencias y mantenimiento cuando lo necesites.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Garantía extendida</h3>
                <p class="text-gray-600">Garantías de hasta 5 años en instalaciones y equipos.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/8031996/pexels-photo-8031996.jpeg" 
            alt="Técnico profesional de climatización"
            class="rounded-2xl shadow-2xl"
            loading="lazy"
          />
          <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-2xl shadow-lg">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary-600">500+</div>
              <div class="text-sm text-gray-600">Proyectos completados</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-gray-50">
    <div class="container-width section-padding">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Solicita tu Presupuesto Gratuito
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Cuéntanos sobre tu proyecto y te contactaremos para ofrecerte la mejor solución personalizada.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h3>
          <ContactForm client:load />
        </div>

        <!-- Map and Info -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Nuestra ubicación</h3>
            <GoogleMap client:load />
          </div>
          
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Información de contacto</h4>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
                <span class="text-gray-700">XXX XXX XXX</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                </svg>
                <span class="text-gray-700">info@girolan.net</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">Calle Principal, 123 - Madrid</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>