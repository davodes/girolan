---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ContactForm from '../components/ContactForm';
import GoogleMap from '../components/GoogleMap';
import { AirVent, Heater, Wind, Snowflake } from 'lucide-react';

const services = [
  {
    title: "Aires acondicionados",
    description: "Instalación, mantenimiento y reparación de sistemas de aire acondicionado residenciales y comerciales. Climatización eficiente para tu máximo confort.",
    icon: AirVent,
    link: "/aire-acondicionado",
    features: ["Sistemas Split", "Aire central", "Bombas de calor", "Certificación energética"]
  },
  {
    title: "Sistemas de calefacción",
    description: "Sistemas de calefacción modernos y eficientes. Desde calderas tradicionales hasta sistemas de suelo radiante y aerotermia.",
    icon: Heater,
    link: "/calefaccion",
    features: ["Calderas de condensación", "Suelo radiante", "Radiadores", "Aerotermia"]
  },
  {
    title: "Sistemas de ventilación",
    description: "Sistemas de ventilación mecánica controlada para garantizar la calidad del aire interior y el confort en espacios residenciales y comerciales.",
    icon: Wind,
    link: "/ventilacion",
    features: ["VMC doble flujo", "Recuperadores de calor", "Extracción localizada", "Filtración avanzada"]
  },
  {
    title: "Refrigeración industrial",
    description: "Soluciones de refrigeración industrial para sectores como alimentación, farmacéutico, logística y hostelería. Sistemas robustos y eficientes.",
    icon: Snowflake,
    link: "/frio-industrial",
    features: ["Cámaras frigoríficas", "Equipos de refrigeración", "Sistemas centralizados", "Mantenimiento preventivo"]
  }
];
---

<Layout 
  title="Girolan - Climatización profesional | Aire Acondicionado, Calefacción y Ventilación"
  description="Expertos en climatización con más de 35 años de experiencia en San Sebastián. Instalación y mantenimiento de aire acondicionado, calefacción, ventilación y frío industrial. Presupuesto gratuito."
>
  <!-- Hero Section -->
  <Hero 
    title="Especialistas en climatización y aire acondicionado en San Sebastián"
    subtitle="Expertos con más de 35 años de experiencia"
    description="Soluciones integrales en aire acondicionado, calefacción, ventilación y frío industrial. Garantizamos tu confort con tecnología de vanguardia y servicio personalizado."
    image="https://images.pexels.com/photos/2539462/pexels-photo-2539462.jpeg"
  />

  <!-- Services Section -->
  <section>
    <div class="container-width section-padding">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Nuestros servicios
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Ofrecemos soluciones completas de climatización para hogares, oficinas e industrias. 
          Tecnología avanzada y servicio personalizado para cada proyecto.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-8">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            icon={service.icon}
            link={service.link}
            features={service.features}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-white">
    <div class="container-width section-padding">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">
            ¿Por qué elegir Girolan?
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Más de 35 años de experiencia</h3>
                <p class="text-gray-600">Décadas de experiencia respaldan cada proyecto que realizamos.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Certificaciones oficiales</h3>
                <p class="text-gray-600">Técnicos certificados y autorizados por las principales marcas.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Servicio 24/7</h3>
                <p class="text-gray-600">Disponibles para emergencias y mantenimiento cuando lo necesites.</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Garantía extendida</h3>
                <p class="text-gray-600">Garantías de hasta 5 años en instalaciones y equipos.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/8031996/pexels-photo-8031996.jpeg" 
            alt="Técnico profesional de climatización"
            class="rounded-2xl shadow-2xl"
            loading="lazy"
          />
          <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-2xl shadow-lg">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary-600">500+</div>
              <div class="text-sm text-gray-600">Proyectos completados</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20">
    <div class="container-width section-padding">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">
          Solicita tu presupuesto gratuito
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Cuéntanos sobre tu proyecto y te contactaremos para ofrecerte la mejor solución personalizada.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h3>
          <ContactForm client:load />
        </div>

        <!-- Map and Info -->
        <div class="space-y-8">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Nuestra ubicación</h3>
            <GoogleMap client:load />
          </div>
          
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h4 class="text-xl font-semibold text-gray-900 mb-4">Información de contacto</h4>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
                <span class="text-gray-700">943 458 503</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                </svg>
                <span class="text-gray-700">girolan@girolan.net</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">Calle Pescadores de Terranova, 21 Bajo, 20011<br>Donostia - San Sebastian, Guipuzcoa</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>