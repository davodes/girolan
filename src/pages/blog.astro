---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';

const blogPosts = [
  {
    title: "Guía Completa para Elegir el Sistema de Aire Acondicionado Perfecto",
    slug: "guia-elegir-aire-acondicionado",
    excerpt: "Descubre todos los factores clave que debes considerar antes de instalar un sistema de aire acondicionado en tu hogar o oficina.",
    image: "https://images.pexels.com/photos/8985018/pexels-photo-8985018.jpeg",
    category: "Aire Acondicionado",
    date: "2024-01-15",
    readTime: "8 min",
    author: "Equipo Girolan"
  },
  {
    title: "Aerotermia vs Calderas Tradicionales: ¿Cuál es la Mejor Opción?",
    slug: "aerotermia-vs-calderas-tradicionales",
    excerpt: "Comparativa detallada entre sistemas de aerotermia y calderas tradicionales: eficiencia, coste y impacto ambiental.",
    image: "https://images.pexels.com/photos/6195125/pexels-photo-6195125.jpeg",
    category: "Calefacción",
    date: "2024-01-10",
    readTime: "12 min",
    author: "Equipo Girolan"
  },
  {
    title: "La Importancia de la Ventilación en el Hogar Post-COVID",
    slug: "importancia-ventilacion-post-covid",
    excerpt: "Cómo ha cambiado la percepción de la calidad del aire interior y qué sistemas de ventilación son más efectivos.",
    image: "https://images.pexels.com/photos/6195123/pexels-photo-6195123.jpeg",
    category: "Ventilación",
    date: "2024-01-05",
    readTime: "6 min",
    author: "Equipo Girolan"
  },
  {
    title: "Mantenimiento Preventivo: Cómo Alargar la Vida de tu Climatización",
    slug: "mantenimiento-preventivo-climatizacion",
    excerpt: "Consejos prácticos para mantener tu sistema de climatización en perfectas condiciones y evitar averías costosas.",
    image: "https://images.pexels.com/photos/5998120/pexels-photo-5998120.jpeg",
    category: "Mantenimiento",
    date: "2023-12-20",
    readTime: "10 min",
    author: "Equipo Girolan"
  },
  {
    title: "Eficiencia Energética: Nuevas Normativas y Subvenciones 2024",
    slug: "eficiencia-energetica-normativas-2024",
    excerpt: "Todo lo que necesitas saber sobre las nuevas regulaciones energéticas y las ayudas disponibles para renovar tu sistema.",
    image: "https://images.pexels.com/photos/7031407/pexels-photo-7031407.jpeg",
    category: "Eficiencia Energética",
    date: "2023-12-15",
    readTime: "15 min",
    author: "Equipo Girolan"
  },
  {
    title: "Frío Industrial: Tendencias y Tecnologías Emergentes",
    slug: "frio-industrial-tendencias-tecnologias",
    excerpt: "Análisis de las últimas innovaciones en refrigeración industrial y su impacto en la eficiencia operativa.",
    image: "https://images.pexels.com/photos/7129160/pexels-photo-7129160.jpeg",
    category: "Frío Industrial",
    date: "2023-12-10",
    readTime: "11 min",
    author: "Equipo Girolan"
  }
];

const categories = ["Todos", "Aire Acondicionado", "Calefacción", "Ventilación", "Mantenimiento", "Eficiencia Energética", "Frío Industrial"];
---

<Layout 
  title="Blog de Climatización | Consejos y Noticias | Girolan"
  description="Blog especializado en climatización. Consejos, guías y noticias sobre aire acondicionado, calefacción, ventilación y eficiencia energética."
>
  <Hero 
    title="Blog de Climatización"
    subtitle="Consejos y tendencias del sector"
    description="Mantente informado con los últimos avances en climatización, consejos de mantenimiento y guías para optimizar el confort de tu hogar o negocio."
    image="https://images.pexels.com/photos/261662/pexels-photo-261662.jpeg"
    showCTA={false}
  />

  <!-- Blog Content -->
  <section class="py-20 bg-white">
    <div class="container-width section-padding">
      <!-- Categories Filter -->
      <div class="flex flex-wrap justify-center gap-4 mb-16">
        {categories.map((category) => (
          <button 
            class={`px-6 py-3 rounded-full text-sm font-semibold transition-colors ${
              category === "Todos" 
                ? "bg-primary-600 text-white" 
                : "bg-gray-100 text-gray-700 hover:bg-primary-100 hover:text-primary-700"
            }`}
          >
            {category}
          </button>
        ))}
      </div>

      <!-- Featured Post -->
      <div class="mb-16">
        <article class="grid grid-cols-1 lg:grid-cols-2 gap-8 bg-gradient-to-br from-primary-50 to-secondary-50 rounded-2xl overflow-hidden shadow-lg">
          <div class="relative h-64 lg:h-auto">
            <img 
              src={blogPosts[0].image} 
              alt={blogPosts[0].title}
              class="w-full h-full object-cover"
              loading="eager"
            />
            <div class="absolute top-4 left-4">
              <span class="inline-block bg-primary-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                Destacado
              </span>
            </div>
          </div>
          
          <div class="p-8 flex flex-col justify-center">
            <div class="flex items-center space-x-4 text-sm text-gray-600 mb-4">
              <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full font-medium">
                {blogPosts[0].category}
              </span>
              <span>{new Date(blogPosts[0].date).toLocaleDateString('es-ES', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}</span>
              <span>{blogPosts[0].readTime} de lectura</span>
            </div>
            
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 leading-tight">
              {blogPosts[0].title}
            </h2>
            
            <p class="text-lg text-gray-600 mb-6 leading-relaxed">
              {blogPosts[0].excerpt}
            </p>
            
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Por {blogPosts[0].author}</span>
              <a 
                href={`/blog/${blogPosts[0].slug}`}
                class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors"
              >
                Leer artículo
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </article>
      </div>

      <!-- Blog Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.slice(1).map((post) => (
          <article class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group border border-gray-100">
            <div class="relative h-48 overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              />
              <div class="absolute top-4 left-4">
                <span class="inline-block bg-white/90 text-primary-700 px-3 py-1 rounded-full text-sm font-semibold backdrop-blur-sm">
                  {post.category}
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex items-center space-x-4 text-sm text-gray-500 mb-3">
                <span>{new Date(post.date).toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}</span>
                <span>{post.readTime} de lectura</span>
              </div>
              
              <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-primary-600 transition-colors">
                {post.title}
              </h3>
              
              <p class="text-gray-600 mb-4 leading-relaxed">
                {post.excerpt}
              </p>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">Por {post.author}</span>
                <a 
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors"
                >
                  Leer más
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More -->
      <div class="text-center mt-12">
        <button class="btn-secondary">
          Cargar más artículos
        </button>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-20 bg-primary-600 text-white">
    <div class="container-width section-padding">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold mb-6">
          Mantente al día con nuestros consejos
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Suscríbete a nuestro newsletter y recibe los mejores consejos de climatización, 
          ofertas exclusivas y las últimas novedades del sector.
        </p>
        
        <form class="flex flex-col sm:flex-row gap-4 max-w-lg mx-auto">
          <input
            type="email"
            placeholder="Tu email"
            class="flex-1 px-6 py-4 rounded-lg text-gray-900 focus:ring-2 focus:ring-white focus:outline-none"
            required
          />
          <button
            type="submit"
            class="bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
          >
            Suscribirse
          </button>
        </form>
        
        <p class="text-sm opacity-75 mt-4">
          No enviamos spam. Puedes darte de baja en cualquier momento.
        </p>
      </div>
    </div>
  </section>

  <!-- Related Topics -->
  <section class="py-20 bg-gray-50">
    <div class="container-width section-padding">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 text-center mb-12">
        Temas de Interés
      </h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <a href="/aire-acondicionado" class="group bg-white rounded-xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-200 transition-colors">
            <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm2 4v-2H3a2 2 0 0 0 2 2zM3 9h2V7H3v2z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">Aire Acondicionado</h3>
        </a>
        
        <a href="/calefaccion" class="group bg-white rounded-xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-secondary-200 transition-colors">
            <svg class="w-6 h-6 text-secondary-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.71 17.99A1.02 1.02 0 0 1 11 18c-.4 0-.77-.23-.95-.61l-1.89-4.11c-.08-.17-.12-.36-.12-.55V5c0-.55.45-1 1-1s1 .45 1 1v7.73l1.89 4.11c.08.17.12.36.12.55 0 .28-.11.52-.29.71-.18.18-.42.29-.71.29z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-secondary-600 transition-colors">Calefacción</h3>
        </a>
        
        <a href="/ventilacion" class="group bg-white rounded-xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-accent-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent-200 transition-colors">
            <svg class="w-6 h-6 text-accent-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9l-5 4.87L18.18 22 12 18.77 5.82 22 7 13.87 2 9l6.91-.74L12 2z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-accent-600 transition-colors">Ventilación</h3>
        </a>
        
        <a href="/contacto" class="group bg-white rounded-xl p-6 text-center shadow-md hover:shadow-lg transition-all duration-300">
          <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-gray-200 transition-colors">
            <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 group-hover:text-gray-700 transition-colors">Contacto</h3>
        </a>
      </div>
    </div>
  </section>
</Layout>