    <!-- Mobile Navigation -->
    <div class="mobile-menu hidden md:hidden w-full">
      <div class="flex flex-col gap-3 pt-20 pl-8 pr-4 pb-8 space-y-1 bg-black/[var(--bg-opacity)] [--bg-opacity:10%] backdrop-blur-md rounded-lg mt-2 w-full h-screen">
