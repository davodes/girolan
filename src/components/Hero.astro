---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  image?: string;
  showCTA?: boolean;
  class?: string;
}

import { CircleChevronRight } from 'lucide-react';

const { title, subtitle, description, showCTA, class: extraClass = true } = Astro.props;
---

<section id="hero" class={`relative min-h-[80vh] pt-12 flex items-center justify-center overflow-hidden ${extraClass ?? ''}`}>
  <div class="absolute inset-0 bg-gradient-to-br from-blue-950 to-primary-700"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 z-10">
    <div class="absolute top-20 left-10 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-[150px] opacity-30 animate-float"></div>
    <div class="absolute -bottom-8 right-20 w-72 h-72 bg-secondary-700 rounded-full mix-blend-multiply filter blur-[200px] opacity-30 animate-float" style="animation-delay: 2s;"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-max text-center text-white section-padding">
    <div class="max-w-4xl mx-auto">
      {subtitle && (
        <p class="text-white font-semibold text-lg mb-4 animate-fade-in">
          {subtitle}
        </p>
      )}
      
      <h1 class="text-4xl sm:text-5xl lg:text-4xl xl:text-5xl font-bold text-white mb-6 leading-[3rem] sm:leading-[4rem] lg:leading-[3rem] xl:leading-[4rem] animate-slide-up">
        {title}
      </h1>
      
      <p class="text-lg sm:text-base text-white mb-8 max-w-2xl mx-auto leading-relaxed animate-slide-up font-light" style="animation-delay: 0.2s;">
        {description}
      </p>
      
      {showCTA && (
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-slide-up" style="animation-delay: 0.4s;">
          <a href="/contacto" class="flex gap-2 btn-primary text-lg px-8 py-4 shadow-lg hover:shadow-xl rounded-full">
            Solicitar presupuesto <CircleChevronRight />
          </a>
          <a href="/proyectos" class="nav-link btn-secondary text-lg px-8 py-4 rounded-full bg-transparent border-none text-white hover:bg-transparent focus:outline-offset-0 focus:outline-none focus:ring-offset-0 focus:ring-0 shadow-none">
            Ver proyectos
          </a>
        </div>
      )}
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
.nav-link {
  @apply hover:text-white flex items-center gap-2 px-1 py-2 transition-colors relative;
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  height: 2px;
  background: theme('colors.white');
  transition: all 0.3s ease;
  transform: translateX(-50%);
}

.nav-link:hover::after {
  width: 100%;
}
:global(.hero-extra) {
  min-height: 60vh !important;
  padding-top: 6rem;
}
</style>