---
interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  type?: string;
}

const {
  title = "Girolan - Climatización Profesional | Aire Acondicionado, Calefacción y Ventilación",
  description = "Expertos en climatización con más de 20 años de experiencia. Instalación y mantenimiento de aire acondicionado, calefacción, ventilación y frío industrial.",
  canonical = Astro.url.href,
  image = "/images/girolan-og.jpg",
  type = "website"
} = Astro.props;

const siteName = "Girolan";
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="robots" content="index, follow" />
<meta name="language" content="Spanish" />
<meta name="author" content="Girolan" />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="es_ES" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Schema.org structured data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Girolan",
  "description": "Empresa especializada en climatización, aire acondicionado, calefacción y ventilación",
  "url": "https://girolan.net",
  "telephone": "+34 XXX XXX XXX",
  "email": "info@girolan.net",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Calle Principal, 123",
    "addressLocality": "Madrid",
    "addressCountry": "ES"
  },
  "openingHours": "Mo-Fr 08:00-18:00",
  "priceRange": "€€",
  "servedCuisine": "Climatización",
  "serviceArea": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "40.4168",
      "longitude": "-3.7038"
    },
    "geoRadius": "50000"
  },
  "services": [
    {
      "@type": "Service",
      "name": "Aire Acondicionado",
      "description": "Instalación y mantenimiento de sistemas de aire acondicionado"
    },
    {
      "@type": "Service", 
      "name": "Calefacción",
      "description": "Sistemas de calefacción residencial e industrial"
    },
    {
      "@type": "Service",
      "name": "Ventilación", 
      "description": "Sistemas de ventilación y renovación de aire"
    },
    {
      "@type": "Service",
      "name": "Frío Industrial",
      "description": "Soluciones de refrigeración industrial"
    }
  ]
}
</script>